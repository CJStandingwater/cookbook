  "instructions": [
    {
      "title": "Prepare Buttermilk Substitute",
      "content": "Combine milk and lemon juice. Let it sit for 5-10 minutes, whisking periodically.",
      "notes": [
        "Skip this step if using buttermilk directly."
      ]
    },
    {
      "title": "Combine Wet Ingredients",
      "content": "Whisk oil, eggs, and vanilla extract into the milk mixture."
    },
    {
      "title": "Mix Dry Ingredients",
      "content": "Whisk flour, sugar, baking powder, baking soda, and salt in a separate bowl.",
      "notes": [
        "Add spices like cinnamon or nutmeg at this step if desired."
      ]
    },
    {
      "title": "Combine Batter",
      "content": "Pour wet ingredients into the dry ingredients and whisk quickly until combined.",
      "notes": [
        "Quickly fold in fruits or nuts now if desired. Avoid overmixing."
      ]
    },
    {
      "title": "Cook Pancakes",
      "content": "Heat pan or griddle over medium heat. Pour batter onto hot surface and cook until bubbles form, then flip and cook until golden brown."
    }
  ],

  "timings": [
